<h1>Hi there! Wanna be part of cool society? Let's get you an account!</h1>
<%= form_tag '/users', method: :post do  %>

  <fieldset>
    <legend><span class="number">1</span>Your basic info</legend>
    <label for="name">Nickname:</label>
    <input type="text" id="nickname" name="nickname">
    
    <label for="mail">Email:</label>
    <input type="email" id="mail" name="email">
    
    <label for="password">Password:</label>
    <input type="password" id="password" name="password">

    <label for="password">Confirm Password:</label>
    <input type="password" id="password" name="password_confirmation">
  </fieldset>
  
  <fieldset>
    <legend><span class="number">2</span>Your profile</legend>
    <label for="location">Location:</label>
    <input type="text" id="location" name="location">
  
    <label>Interests:</label>
    <p>Please check things that you are excited about, we will try to show you content based on your interests:</p>
    <% @tags.each do |tag| %>
      <div><input type="checkbox" value="<%= tag.id %>" name="tag_ids[]"/>
      <label class="light" for="tag_ids[]"><%= tag.name %></label></div>
    <% end %>
  </fieldset>

  <button type="submit">Sign Up</button>

<% end %>