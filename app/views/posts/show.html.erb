<div class="post"><h3> <%= @post.user.nickname %> </h3>
  <h1><%= @post.title %> </h1>
  <h2><%= @post.description %> </h2>
  <img class="postImage" src= <%= @post.image.url %>>
  Tags: 
  <% @post.tags.each do |tag|%>
    <li> <%= tag.name %> </li>
  <% end %>

  <div class="button"> <a href="/posts/<%= @post.id %>/edit"> Edit Post </a> </div>

  <br>
  =============================
  <br>
  <div class="button"> <a href="/"> Back to My Feed </a> </div>
</div>